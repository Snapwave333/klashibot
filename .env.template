# Kalshi Trading System Environment Configuration
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control!

# ============================================
# KALSHI API CREDENTIALS (REQUIRED)
# ============================================
# Get your API key from: https://kalshi.com/settings/api
KALSHI_API_KEY=your_api_key_here

# Path to your private key file (PEM format)
# Generate with: openssl genpkey -algorithm RSA -out kalshi_private.pem -pkeyopt rsa_keygen_bits:2048
KALSHI_PRIVATE_KEY_PATH=./config/kalshi_private.pem

# Kalshi API Base URL
# Production: https://api.elections.kalshi.com
# Demo: https://demo-api.elections.kalshi.com
BASE_URL=https://api.elections.kalshi.com

# ============================================
# TRADING CONFIGURATION
# ============================================
# Enable paper trading mode (simulated wallet with real market data)
# Set to "false" for live trading (USE WITH EXTREME CAUTION)
PAPER_TRADING=true

# Paper trading starting balance in CENTS ($100 = 10000 cents)
PAPER_BALANCE=10000

# ============================================
# SYSTEM CONFIGURATION
# ============================================
# WebSocket server port
WEBSOCKET_PORT=8766

# Frontend development port
FRONTEND_PORT=3002

# Database path
DATABASE_PATH=./data/kalshi.db

# Enable WAL mode for SQLite
DB_WAL_MODE=true

# ============================================
# SECURITY SETTINGS
# ============================================
# Require transaction approval for trades above this % of portfolio
REQUIRE_APPROVAL_THRESHOLD=5.0

# Maximum position size as % of portfolio
MAX_POSITION_SIZE_PCT=20.0

# Daily loss limit as % before auto-shutdown
DAILY_LOSS_LIMIT_PCT=10.0

# ============================================
# REDIS CONFIGURATION
# ============================================
# Redis host for caching
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis password (optional)
# REDIS_PASSWORD=your_redis_password

# ============================================
# MONITORING & LOGGING
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable structured JSON logging
JSON_LOGGING=false

# Metrics collection endpoint (optional)
# METRICS_ENDPOINT=http://localhost:9090/metrics

# ============================================
# TTS CONFIGURATION (Optional)
# ============================================
# Enable text-to-speech for trade announcements
TTS_ENABLED=true

# TTS voice model
TTS_MODEL=shimmer
